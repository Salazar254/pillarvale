{
  "name": "payflow",
  "version": "1.0.0",
  "description": "PayFlow - Instant M-Pesa Settlement Platform",
  "private": true,
  "scripts": {
    "tailwind:build": "tailwindcss -i ./src/input.css -o ./dist/output.css --minify",
    "tailwind:watch": "tailwindcss -i ./src/input.css -o ./dist/output.css --watch",
    "start": "npm run tailwind:build && npm run api:start",
    "dev": "npm run tailwind:watch & npm --prefix api run dev",
    "api:start": "npm --prefix api start"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.1",
    "postcss": "^8.4.32",
    "autoprefixer": "^10.4.17"
  }
}
